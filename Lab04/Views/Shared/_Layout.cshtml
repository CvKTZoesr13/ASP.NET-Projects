<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Layout 3</title>
    <style>
        body {
            background-color: #3f3f3f;
            font-family: Arial, Helvetica, sans-serif;
            color: #2d2d2d;
        }

        p {
            line-height: 1.5em;
        }

        .container {
            width: 50%;
            margin: 20px auto;
            background: #ebeef0;
            border: 15px solid white;
        }

        header {
            margin: 0;
            width: 100%;
            height: 90px;
            background: #2450b6;
            color: rgb(238, 239, 254);
        }

            header h1 {
                text-align: center;
                line-height: 90px;
                letter-spacing: 5px;
                margin: 0;
                /* mặc định h1 có các lề */
            }

        .content {
            width: 100%;
            box-sizing: border-box;
            padding: 15px;
            float: left;
            min-height: 500px;
        }

            .content .title {
                color: #2450b6;
                padding: 5px;
                font-size: large;
                font-weight: bold;
            }

        nav {
            width: 100%;
            height: 30px;
            box-sizing: border-box;
            background: #446fd2;
        }

            nav ul {
                text-align: right;
                margin-top: 1px;
            }

                nav ul li {
                    padding: 5px 20px;
                    display: inline-block;
                    border-left: 1px solid white;
                }

                    nav ul li a {
                        color: rgb(243, 243, 248);
                        text-decoration: none;
                    }

                        nav ul li a:hover {
                            font-weight: bold;
                            color: rgb(216, 238, 155);
                        }

        footer {
            clear: both;
            width: 100%;
            text-align: center;
            background: #bfd1fb;
            height: 30px;
            line-height: 30px;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>WELCOME TO MY WEBSITE</h1>
        </header>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("Bullets", "Bullets", "ListDemo")</li>
                <li>@Html.ActionLink("Numbering", "Numbering", "ListDemo")</li>
            </ul>
        </nav>
        <div class="content">
            @RenderBody()
        </div>
    </div>

</body>

</html>

